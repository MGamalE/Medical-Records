<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context=".view.SignUpActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:id="@+id/card">
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_logo"/>

        <com.example.test.medicalreport.util.MedicalTextFont
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="medical record"
            android:textAllCaps="true"
            android:textSize="22sp"
            android:gravity="center"
            android:textColor="@color/white"/>
    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:cardCornerRadius="8dp"
        android:layout_margin="16dp"
        android:layout_below="@+id/card"
        android:background="@color/white"
        app:cardElevation="6dp">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:padding="16dp"
            android:fillViewport="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <com.example.test.medicalreport.util.MedicalTextFont
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Complete your record to login!"
                    android:textSize="18sp"
                    android:layout_marginBottom="8dp"
                    android:textColor="@color/colorAccent"
                    android:gravity="center"/>


                <com.example.test.medicalreport.util.MedicalEditTextFont
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
                    android:drawablePadding="8dp"
                    android:textColor="@color/text_color"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:textSize="14sp"
                    android:id="@+id/password_input"
                    android:layout_marginBottom="16dp"
                    android:textColorHint="@color/text_color"/>

                <com.example.test.medicalreport.util.MedicalEditTextFont
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_mail_black_24dp"
                    android:drawablePadding="8dp"
                    android:textColor="@color/text_color"
                    android:hint="E-mail"
                    android:inputType="textEmailAddress"
                    android:textSize="14sp"
                    android:id="@+id/email_input"
                    android:layout_marginBottom="16dp"
                    android:textColorHint="@color/text_color"/>


                <com.example.test.medicalreport.util.MedicalEditTextFont
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_person_black_24dp"
                    android:drawablePadding="8dp"
                    android:textColor="@color/text_color"
                    android:hint="Father"
                    android:textSize="14sp"
                    android:inputType="text"
                    android:id="@+id/uncle_name_input"
                    android:layout_marginBottom="8dp"
                    android:textColorHint="@color/text_color"/>

                <com.example.test.medicalreport.util.MedicalEditTextFont
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_person_black_24dp"
                    android:drawablePadding="8dp"
                    android:textColor="@color/text_color"
                    android:hint="Mother"
                    android:textSize="14sp"
                    android:inputType="text"
                    android:id="@+id/daughter_name_input"
                    android:layout_marginBottom="8dp"
                    android:textColorHint="@color/text_color"/>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="1dp"
                    android:id="@+id/register_btn"
                    android:layout_marginBottom="16dp"
                    android:background="@color/colorAccent"
                    app:cardCornerRadius="10dp">
                    <com.example.test.medicalreport.util.MedicalTextFont
                        android:layout_width="match_parent"
                        android:background="@color/colorAccent"
                        android:layout_height="45dp"
                        android:text="Regsiter"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:textSize="18sp"/>
                </android.support.v7.widget.CardView>



            </LinearLayout>
        </ScrollView>
    </android.support.v7.widget.CardView>


</RelativeLayout>
